@using Microsoft.AspNetCore.Identity
@inject SignInManager<InventoryAppData.Models.ApplicationUser> SignInManager
@inject UserManager<InventoryAppData.Models.ApplicationUser> UserManager

<ul class="navbar-nav" id="loginBar">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Привет, @UserManager.GetUserAsync(User).Result.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                <button type="submit" class="nav-link btn btn-link">Выход</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link openModalBtn-m" asp-controller="Account" asp-action="Login">Вход</a>
        </li>
    }
</ul>
