@model InventoryASP.Models.Device.NewDeviceModel

<div class="modal-content">
    <!--Заголовок-->
    <div class="modal-header">
        <h4>Новое устройство:</h4>
        <button type="button" class="btn-close close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!--Основной блок-->
    <form asp-action="AddDevice" method="post" id="createDeviceForm">
        <div class="modal-body">
            <div class="form-group">
                <label asp-for="Name">Наименование устройства</label>
                <input asp-for="Name" class="form-control" placeholder="Наименование" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type">Тип устройства</label>
                <input asp-for="Type" class="form-control" placeholder="Тип" />
            </div>
            <div class="form-group">
                <label asp-for="DeviceModel">Модель устройства</label>
                <input asp-for="DeviceModel" class="form-control" placeholder="Модель" />
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer">Производитель устройства</label>
                <input asp-for="Manufacturer" class="form-control" placeholder='Производитель' />
            </div>
            <div class="form-group">
                <label asp-for="SerialNumber">Серийный номер</label>
                <input asp-for="SerialNumber" class="form-control" placeholder="Серийный номер" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Описание</label>
                <textarea asp-for="Description" class="form-control" placeholder="Описание..."></textarea>
            </div>
            <input type="hidden" name="IsValid" value="@ViewData.ModelState.IsValid.ToString()" />
        </div>

        <!--Подвал-->
        <div class="modal-footer">
            <button type="button" onclick="CreateDevice()" class="btn btn-primary">Добавить</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        </div>
    </form>

</div>