@model InventoryASP.Models.Employee.EmployeeIndexModel

<div class="sectionHeader mainBackgroundColor shadow">
    <h4 class="text-center text-white p-3">Сотрудники</h4>
</div>

<div class="container pb-2 pt-2 mainScreen">
    <span><a asp-controller="Employee" asp-action="NewEmployee" class="btn btn-dark mb-2 shadow">Новый сотрудник</a></span>

    <table class="table table-hover table-sm table-striped table-borderless">
        <thead class="thead-dark mainColor">
            <tr>
                <th>Ф.И.О.</th>
                <th>Отдел</th>
                <th>Должность</th>
                <th>Оборудование на балансе</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td><a asp-action="Details" asp-route-id="@employee.Id" class="">@employee.FullName</a></td>
                    <td>@employee.Department</td>
                    <td>@employee.Position</td>
                    <td>
                        <ol class="m-0">
                            @foreach (var device in employee.Devices)
                            {
                                <li>@device.Type @device.Name @device.DeviceModel</li>
                            }
                        </ol>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
