@model InventoryASP.Models.Device.NewDeviceModel

<div class="modal-content">
    <!--Заголовок-->
    <div class="modal-header">
        <h4>Изменить данные оборудования:</h4>
        <button type="button" class="btn-close close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!--Основной блок-->
    <form method="post" asp-action="Update" id="modifyDeviceForm">
        <div class="modal-body">
            <div class="form-group">
                <label asp-for="Name">Наименование оборудования</label>
                <input asp-for="Name" class="form-control" placeholder="Наименование" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type">Тип оборудования</label>
                <input asp-for="Type" class="form-control" placeholder="Тип" />
            </div>
            <div class="form-group">
                <label asp-for="DeviceModel">Модель оборудования</label>
                <input asp-for="DeviceModel" class="form-control" placeholder="Модель" />
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer">Производитель оборудования</label>
                <input asp-for="Manufacturer" class="form-control" placeholder='Производитель' />
            </div>
            <div class="form-group">
                <label asp-for="Year">Год выпуска</label>
                <input type="number" min="2020" max="3000" asp-for="Year" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SerialNumber">Серийный номер</label>
                <input asp-for="SerialNumber" class="form-control" placeholder="Серийный номер" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Примечание</label>
                <textarea asp-for="Description" class="form-control" placeholder="Введите текст примечания..."></textarea>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="IsValid" value="@ViewData.ModelState.IsValid.ToString()" />
        </div>

        <!--Подвал-->
        <div class="modal-footer">
            <button type="button" onclick="UpdateDevice()" class="btn btn-primary">Изменить</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        </div>
    </form>

</div>