@model InventoryASP.Models.Employee.EmployeeIndexModel
@inject Microsoft.AspNetCore.Identity.UserManager<InventoryAppData.Models.ApplicationUser> UserManager

<div class="pb-2 mainScreen">

    <!--Заголовок секции-->
    <div class="sectionHeader clearfix">
        <h4 class="text-white float-left">Сотрудники</h4>
        <a asp-controller="Employee" asp-action="NewEmployee" class="float-right btn btn-sm btn-success shadow openModalBtn-lg">
            <span><img src="~/icons/icons8_add_32.png" /></span>Добавить
        </a>
    </div>

    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>Ф.И.О.</th>
                <th>Отдел</th>
                <th>Должность</th>
                <th>Оборудование на балансе</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td><a asp-action="Details" asp-route-id="@employee.Id">@employee.FullName</a></td>
                    <td>@employee.Department</td>
                    <td>@employee.Position</td>
                    <td>
                        <ol class="m-0">
                            @foreach (var device in employee.Devices)
                            {
                                <li><a asp-controller="Device" asp-action="Details" asp-route-id="@device.Id">@device.Type @device.Name @device.DeviceModel</a></li>
                            }
                        </ol>
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <a class="btn btn-sm btn-primary btnMini openModalBtn-sm" asp-action="EditEmployee" asp-route-id="@employee.Id">
                                <img src="~/icons/icons8_pencil_16.png" alt="Редактировать" />
                            </a>
                            <a class="btn btn-sm btn-danger btnMini openModalBtn-sm" asp-action="DeleteEmployee" asp-route-id="@employee.Id">
                                <img src="~/icons/icons8_trash_16.png" alt="Удалить" />
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
