@model InventoryASP.Models.Account.LoginModel

<div class="login modal-content p-2">
    <div class="modal-header">
        <button type="button" data-dismiss="modal" class="close">
            <span>&times;</span>
        </button>
    </div>
    <form method="post" asp-controller="Account" asp-action="Login">

        <div class="form-group">
            <label asp-for="LoginName"></label>
            <input class="form-control" asp-for="LoginName" />
            <span class="text-danger" asp-validation-for="LoginName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input class="form-check" asp-for="RememberMe" />
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="submit" class="btn btn-primary" value="Войти" />
    </form>
</div>

