@model InventoryASP.Models.Device.DeviceIndexModel

<div class="sectionHeader mainBackgroundColor shadow">
    <h4 class="text-center text-white p-3">Каталог оборудования</h4>
</div>

<div class="container pb-2 pt-2 mainScreen">
    <span><a asp-controller="Device" asp-action="NewDevice" class="btn btn-dark mb-2 shadow" id="device-newDeviceBtn" onclick="newDevice">Новое оборудование</a></span>   

    <table class="table table-hover table-sm table-striped table-borderless">
        <thead class="thead-dark mainColor">
            <tr>
                <th>Тип</th>
                <th>Название</th>
                <th>Модель</th>
                <th>Серийный номер</th>
                <th>Производитель</th>
                <th>Текущий владелец</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var device in Model.Devices)
            {
                <tr>
                    <td>@device.DeviceType</td>
                    <td>@device.DeviceName</td>
                    <td>@device.DeviceModel</td>
                    <td>@device.SerialNumber</td>
                    <td>@device.DeviceManufacturer</td>
                    <td><a asp-controller="Employee" asp-action="Details" asp-route-id="@device.HolderId">@device.HolderName</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>