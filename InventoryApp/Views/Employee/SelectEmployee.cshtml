@model InventoryApp.Models.Employee.SelectEmployeeModel

<div class="modal-content">
    <!--Заголовок окна-->
    <div class="modal-header">
        <h5 class="modal-title">Выберите сотрудника:</h5>
        <button type="button" class="btn-close close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!--Основной контент-->
    <div class="modal-body">
        <!--Поиск по разделу-->
        <div class="sectionHeader">
            <div class="row no-gutters">
                <form method="get" class="col subSearchForm">
                    <div class="input-group searchGroup">
                        <div class="input-group-prepend mr-2">
                            <div class="align-middle">
                                <img src="~/img/search_24px.png">
                            </div>
                        </div>
                        <input id="search-pattern" onkeyup="FilterTable()" class="searchInput flex-grow-1" type="text" autocomplete="off" placeholder="фильтр..." />
                    </div>
                </form>
            </div>
        </div>

        <form method="post" asp-action="CheckOutDevice" asp-controller="Checkout" id="checkout-form">
            <div class="table-container modal-table mt-2">
                <table class="table table-sm table-striped table-hover modal-table indexTable">
                    <tbody>
                        @for (int i = 0; i < Model.Employees.Length; i++)
                        {
                            <tr>
                                <td>
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" id="emp-@i" type="radio" asp-for="SelectedEmployeeId" value="@Model.Employees[i].Id" />
                                        <label class="custom-control-label" for="emp-@i" style="cursor: pointer">
                                            <span>@Model.Employees[i].LastName @Model.Employees[i].Name @Model.Employees[i].Patronymic</span>
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <input type="hidden" asp-for="DeviceId" />
        </form>
    </div>
    <!--Кнопки-->
    <div class="modal-footer">
        <button class="btn btn-primary" form="checkout-form" type="submit">Выбрать</button>
        <button class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
    </div>
</div>