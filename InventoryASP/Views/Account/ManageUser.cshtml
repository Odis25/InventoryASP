@model InventoryASP.Models.Account.ManageUserModel

<div class="modal-content">

    <!--Заголовок окна-->
    <div class="modal-header">
        <h4>Сменить пароль</h4>
        <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
        </button>
    </div>

    <div class="modal-body">
        <h5>@Model.UserName, вы уверены что хотите сменить пароль?</h5>
        <form method="post" asp-action="ChangePassword" id="changePasswordForm">
            <div class="form-group">
                <label asp-for="Password" class=""></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class=""></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class=""></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserId" />
            <div asp-validation-summary="ModelOnly"></div>
        </form>
    </div>

    <!--Футтер-->
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-close" data-dismiss="modal">Отмена</button>
        <button type="submit" form="changePasswordForm" class="btn btn-primary">Ок</button>
    </div>
</div>