@using Microsoft.AspNetCore.Identity
@inject SignInManager<InventoryAppData.Models.ApplicationUser> SignInManager
@inject UserManager<InventoryAppData.Models.ApplicationUser> UserManager

<ul class="navbar-nav" id="loginBar">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Привет, @UserManager.GetUserAsync(User).Result.Name!</a>
            <div class="dropdown-menu">
                <a class="dropdown-item openModalBtn-m" asp-controller="Account" asp-action="ManageUser" asp-route-userId="@UserManager.GetUserId(User)">Сменить пароль</a>
                <div class="dropdown-divider"></div>
                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                    <button type="submit" class="dropdown-item">Выход</button>
                </form>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Привет, Гость!</a>
            <div class="dropdown-menu">                              
                <a class="dropdown-item openModalBtn-sm" asp-controller="Account" asp-action="Login">Войти</a>
            </div>
        </li>
    }
</ul>
