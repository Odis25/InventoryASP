@model InventoryASP.Models.Search.SearchResultModel

<div class="row sectionHeader">
    <div class="col sectionHeading">
        <h4>Результаты поиска для: "<span>@Model.SearchQuery</span>"</h4>
    </div>
</div>
<div class="row">
    <div class="col sectionContent">
        @if (Model.Devices.Any())
        {
            <table class="table table-hover table-sm">
                <thead>
                    <tr>
                        <th colspan="5">Оборудование:</th>
                    </tr>
                </thead>
                @foreach (var device in Model.Devices)
                {
                    <tr>
                        <td>@device.DeviceName</td>
                        <td>@device.DeviceType</td>
                        <td>@device.DeviceModel</td>
                        <td>@device.DeviceManufacturer</td>
                        <td>@device.SerialNumber</td>
                    </tr>
                }
            </table>
        }
        @if (Model.Employees.Any())
        {
            <table class="table table-hover table-sm">
                <thead>
                    <tr>
                        <th colspan="5">Сотрудники:</th>
                    </tr>
                </thead>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@employee.LastName</td>
                        <td>@employee.Name</td>
                        <td>@employee.Patronymic</td>
                        <td>@employee.Position</td>
                        <td>@employee.Department</td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
